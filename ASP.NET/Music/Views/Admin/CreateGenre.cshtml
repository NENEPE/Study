@model MusicPortal.Models.Genre

@{
    ViewData["Title"] = @Resources.Resource.CreateGenre;
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-plus me-2"></i>@Resources.Resource.CreateGenre
        </h1>
        <a href="@Url.Action("Genres")" class="d-none d-sm-inline-block btn btn-sm btn-secondary shadow-sm">
			<i class="fas fa-arrow-left me-1"></i>@Resources.Resource.BackTo
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">@Resources.Resource.GenreInfo</h6>
                </div>
                <div class="card-body">
                    <form asp-action="CreateGenre" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="form-group mb-4">
                            <label asp-for="Name" class="form-label fw-bold">@Resources.Resource.Title</label>
                            <input asp-for="Name" class="form-control form-control-lg"
                                   placeholder="Enter genre name (e.g., Rock, Pop, Jazz)" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                            <small class="form-text text-muted">Genre name should be unique and descriptive.</small>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Description" class="form-label fw-bold">@Resources.Resource.Desc</label>
                            <textarea asp-for="Description" class="form-control" rows="4"
                                      placeholder="Enter a brief description of this genre (optional)"></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                            <small class="form-text text-muted">Describe the characteristics of this music genre.</small>
                        </div>

                        <div class="form-group">
                            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                <button type="submit" class="btn btn-primary btn-lg">
									<i class="fas fa-save me-2"></i>@Resources.Resource.CreateGenre
                                </button>
                                <a href="@Url.Action("Genres")" class="btn btn-secondary btn-lg">
                                    <i class="fas fa-times me-2"></i>@Resources.Resource.Cancel
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#Name').focus();
        });
    </script>
}