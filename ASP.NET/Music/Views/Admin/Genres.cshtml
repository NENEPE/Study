@model IEnumerable<MusicPortal.Models.Genre>

@{
    ViewData["Title"] = Resources.Resource.Genres;
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-music me-2"></i>@Resources.Resource.Genres
        </h1>
        <div>
            <a href="@Url.Action("CreateGenre")" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
                <i class="fas fa-plus me-1"></i>@Resources.Resource.CreateGenre
            </a>
            <a href="@Url.Action("Index")" class="d-none d-sm-inline-block btn btn-sm btn-secondary shadow-sm">
				<i class="fas fa-arrow-left me-1"></i>@Resources.Resource.BackTo
            </a>
        </div>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <span class="badge bg-primary">@Model.Count() @Resources.Resource.TotalGenres</span>
        </div>
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="text-center py-4">
                    <i class="fas fa-music fa-3x text-gray-300 mb-3"></i>
                    <h5 class="text-gray-500">@Resources.Resource.NoGenres</h5>
                    <a href="@Url.Action("CreateGenre")" class="btn btn-primary">
                        <i class="fas fa-plus me-1"></i>@Resources.Resource.CreateGenre
                    </a>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-bordered table-hover" id="genresTable" width="100%" cellspacing="0">
                        <thead class="table-dark">
                            <tr>
                                <th>@Resources.Resource.Title</th>
                                <th>@Resources.Resource.Desc</th>
                                <th>@Resources.Resource.Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var genre in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@genre.Name</strong>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(genre.Description))
                                        {
                                            @genre.Description
                                        }
                                        else
                                        {
                                            <span class="text-muted">@Resources.Resource.NoDesc</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a href="@Url.Action("EditGenre", new { id = genre.Id })"
                                               class="btn btn-warning btn-sm" title="@Resources.Resource.EditGenre">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <form method="post" action="@Url.Action("DeleteGenre")" class="d-inline">
                                                <input type="hidden" name="id" value="@genre.Id" />
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-danger btn-sm"
                                                        title="@Resources.Resource.Delete" onclick="return confirm(@Resources.Resource.Question)">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>