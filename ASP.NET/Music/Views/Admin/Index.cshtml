@{
    var stats = Model;
    ViewData["Title"] = @Resources.Resource.AdminPanel;
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-tachometer-alt me-2">@Resources.Resource.AdminPanel</i>
        </h1>
    </div>

    <div class="row">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@stats.TotalUsers</div>
                        </div>
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            @Resources.Resource.TotalUsers
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-users fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@stats.TotalGenres</div>
                        </div>
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
							@Resources.Resource.TotalGenres
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-music fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@stats.TotalSongs</div>
                        </div>
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                            @Resources.Resource.TotalSongs
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-file-audio fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@stats.PendingUsers</div>
                        </div>
                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
							@Resources.Resource.PendingUsers
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-user-clock fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
						<i class="fas fa-bolt me-2"></i>@Resources.Resource.Actions
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("Users")" class="btn btn-primary btn-block">
                                <i class="fas fa-users me-2">@Resources.Resource.ManageUsers</i>
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("Genres")" class="btn btn-success btn-block">
                                <i class="fas fa-music me-2">@Resources.Resource.ManageGenres</i>
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("Songs")" class="btn btn-info btn-block">
                                <i class="fas fa-file-audio me-2">@Resources.Resource.ManageSongs</i>
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a href="@Url.Action("CreateGenre")" class="btn btn-warning btn-block">
                                <i class="fas fa-plus me-2"></i>@Resources.Resource.CreateGenre
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>