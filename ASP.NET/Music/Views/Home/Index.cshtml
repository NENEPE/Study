@model IEnumerable<MusicPortal.Models.Song>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>@Resources.Resource.Title</h1>
    @if (Context.Session.GetString("UserId") != null)
    {
        <a href="@Url.Action("Create", "Song")" class="btn btn-success">@Resources.Resource.CreateSong</a>
    }
</div>

@if (!Model.Any())
{
    <div class="alert alert-info text-center">
        <h4>@Resources.Resource.NoSongs</h4>
        @if (Context.Session.GetString("UserId") != null)
        {
            <a href="@Url.Action("Create", "Song")" class="btn btn-primary">@Resources.Resource.CreateSong</a>
        }
        else
        {
            <a href="@Url.Action("Register", "Account")" class="btn btn-primary">@Resources.Resource.Register</a>
        }
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>@Resources.Resource.SongTitle</th>
                    <th>@Resources.Resource.Artist</th>
                    <th>@Resources.Resource.Genre</th>
                    <th>@Resources.Resource.UploadedBy</th>
                    <th>@Resources.Resource.Date</th>
                    <th>@Resources.Resource.Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var song in Model)
                {
                    <tr>
                        <td>
                            <strong>@song.Title</strong>
                            @if (!string.IsNullOrEmpty(song.Description))
                            {
                                <br />
                    
                                <small class="text-muted">@song.Description</small>
                            }
                        </td>
                        <td>@song.Artist</td>
                        <td>
                            <span class="badge bg-secondary">@song.Genre.Name</span>
                        </td>
                        <td>@(song.User != null ? song.User.Username : Resources.Resource.Unknown)</td>
                        <td>@song.UploadDate.ToString("MMM dd, yyyy")</td>
                        <td>
                            <a href="@Url.Action("Download", new { id = song.Id })"
                               class="btn btn-primary btn-sm">@Resources.Resource.Download</a>
                            @if (Context.Session.GetString("IsAdmin") == "True" ||
                                                Context.Session.GetString("UserId") == song.UserId.ToString())
                            {
                                <form method="post" action="@Url.Action("DeleteSong", "Admin")"
                                      class="d-inline" onsubmit="return confirm(@Resources.Resource.Question);">
                                    <input type="hidden" name="id" value="@song.Id" />
                                    <button type="submit" class="btn btn-danger btn-sm">@Resources.Resource.Delete</button>
                                </form>
                            }
                            <audio controls>
                                <source src="@song.FilePath">
                            </audio>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
}